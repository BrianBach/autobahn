<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"hibernate-mapping-3.0.dtd">

<hibernate-mapping package="net.geant2.jra3.intradomain">
	
	<class name="IntradomainReservation" table="INTRADOMAIN_RESERVATION">

		<id name="reservationId" type="string" />
		
		<property name="pathCreated" type="boolean" />
		
		<property name="active" type="boolean" />
		
		<many-to-one name="reservedPath" class="IntradomainPath" cascade="all" lazy="false">
            <column name="path_id" />
        </many-to-one>
		
		<many-to-one name="params" class="net.geant2.jra3.reservation.ReservationParams" 
				cascade="all" lazy="false">
            <column name="params_id" />
        </many-to-one>
	</class>
	
</hibernate-mapping>