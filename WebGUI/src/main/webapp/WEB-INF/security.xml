                        http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-2.0.1.xsd">

	<global-method-security secured-annotations="disabled"/>

    <http auto-config="true">
    	<intercept-url pattern="/portal/login.htm" filters="none"/>
    	<intercept-url pattern="/portal/home.htm" filters="none"/>
		<intercept-url pattern="/portal/secure/servicesforidm.htm" filters="none"/>
		<intercept-url pattern="/portal/secure/**" access="ROLE_USER,IS_AUTHENTICATED_REMEMBERED"/>
        <form-login login-page='/portal/login.htm' default-target-url="/portal/home.htm"/>
        <logout logout-success-url="/portal/home.htm"/> 
        <logout invalidate-session="true"/>
     </http>  
    

