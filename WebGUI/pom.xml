			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<executions>
                         <execution>
				            <id>surefire-test</id>
				            </execution>
           					<includes>
							</includes>
							<excludes>
							    <exclude>**/*.java</exclude>
								<exclude>**/Actions.java</exclude>
						</excludes>
			        </executions>
				</configuration>
			</plugin>
			
			<plugin>
            	<groupId>org.codehaus.mojo</groupId>
            	<artifactId>tomcat-maven-plugin</artifactId>
            	<configuration>
            		<!-- Server is defined in settings.xml -->
                    <server>tomcat_150_140_8_58</server>
                    <url>http://150.140.8.58:8080/manager</url>
                    <path>/autobahn-gui</path>
            	</configuration>
        	</plugin>
        	
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>selenium-maven-plugin</artifactId>
				<executions>
					<execution>
						<phase>pre-integration-test</phase>
						<goals>
							<goal>start-server</goal>
						</goals>
						<configuration>
							<background>true</background>
						</configuration>
					</execution>
				</executions>
			</plugin>
			
		</plugins>
	</build>
	
	<profiles>
		<profile>
			<id>wsdl-gen</id>
			<build>			
				<plugins>
					<plugin>
						<groupId>org.apache.cxf</groupId>
						<artifactId>cxf-java2ws-plugin</artifactId>
						<version>2.2.4</version>
						<dependencies>
							<dependency>
								<groupId>org.apache.cxf</groupId>
								<artifactId>cxf-rt-frontend-jaxws</artifactId>
								<version>2.2.1</version>
							</dependency>
							<dependency>
								<groupId>org.apache.cxf</groupId>
								<artifactId>cxf-rt-frontend-simple</artifactId>
								<version>2.2.2</version>
							</dependency>
						</dependencies>
						<executions>
							<execution>
								<id>wsdl-useraccesspoint</id>
								<phase>compile</phase>
								<configuration>
									<className>net.geant.autobahn.useraccesspoint.UserAccessPoint</className>
									<outputFile>src/main/webapp/wsdl/useraccesspoint.wsdl</outputFile>
									<genWsdl>true</genWsdl>
									<serviceName>UserAccessPointService</serviceName>
									<verbose>true</verbose>
								</configuration>
								<goals>
									<goal>java2ws</goal>
								</goals>
							</execution>
							<execution>
								<id>wsdl-administration</id>
								<phase>compile</phase>
								<configuration>
									<className>net.geant.autobahn.administration.Administration</className>
									<outputFile>src/main/webapp/wsdl/administration.wsdl</outputFile>
									<genWsdl>true</genWsdl>
									<serviceName>AdministrationService</serviceName>
									<verbose>true</verbose>
								</configuration>
								<goals>
									<goal>java2ws</goal>
								</goals>
							</execution>
							<execution>
								<id>wsdl-gui</id>
								<phase>compile</phase>
								<configuration>
									<className>net.geant.autobahn.gui.Gui</className>
									<outputFile>src/main/webapp/wsdl/gui.wsdl</outputFile>
									<genWsdl>true</genWsdl>
									<serviceName>GuiService</serviceName>
									<verbose>true</verbose>
								</configuration>
								<goals>
									<goal>java2ws</goal>
								</goals>
							</execution>							
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		
		<profile>
			<id>java-gen</id>
			<build>			
				<plugins>
					<plugin>
						<groupId>org.apache.cxf</groupId>
						<artifactId>cxf-codegen-plugin</artifactId>
						<version>2.0.9</version>
						<executions>
							<execution>
								<id>java-administration</id>
								<phase>compile</phase>
								<configuration>
									<sourceRoot>${basedir}/src/main/webapp/wsdl</sourceRoot>                                
									<wsdlOptions>
										<wsdlOption>
											<wsdl>${basedir}/src/main/webapp/wsdl/administration.wsdl</wsdl>
											<extraargs>
												<extraarg>-client</extraarg>
												<extraarg>-quiet</extraarg>
											</extraargs>
										</wsdlOption>
									</wsdlOptions>
								</configuration>
								<goals>
									<goal>wsdl2java</goal>
								</goals>
							</execution>
							<execution>
								<id>java-useraccesspoint</id>
								<phase>compile</phase>
								<configuration>
									<sourceRoot>${basedir}/src/main/webapp/wsdl</sourceRoot>                                
									<wsdlOptions>
										<wsdlOption>
											<wsdl>${basedir}/src/main/webapp/wsdl/useraccesspoint.wsdl</wsdl>
											<extraargs>
												<extraarg>-client</extraarg>
												<extraarg>-quiet</extraarg>
											</extraargs>
										</wsdlOption>
									</wsdlOptions>
								</configuration>
								<goals>
									<goal>wsdl2java</goal>
								</goals>
							</execution>
							<execution>
								<id>java-gui</id>
								<phase>compile</phase>
								<configuration>
									<sourceRoot>${basedir}/src/main/webapp/wsdl</sourceRoot>                                
									<wsdlOptions>
										<wsdlOption>
											<wsdl>${basedir}/src/main/webapp/wsdl/gui.wsdl</wsdl>
											<extraargs>
												<extraarg>-server</extraarg>
												<extraarg>-quiet</extraarg>
												<extraarg>-impl</extraarg>
											</extraargs>
										</wsdlOption>
									</wsdlOptions>
								</configuration>
								<goals>
									<goal>wsdl2java</goal>
								</goals>
							</execution>							
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
	
