<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"hibernate-mapping-3.0.dtd">

<hibernate-mapping package="net.geant.autobahn.reservation">
	
	<class name="User" table="BOD_USER">
		<id name="name" column="user_name" type="string" />
		
		<property name="email" type="string" />
		
		<many-to-one name="homeDomain" class="net.geant.autobahn.network.AdminDomain" not-null="true" 
			cascade="save-update" />
	</class>
	
</hibernate-mapping>