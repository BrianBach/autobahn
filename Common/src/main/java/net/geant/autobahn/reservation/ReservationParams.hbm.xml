<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"hibernate-mapping-3.0.dtd">

<hibernate-mapping package="net.geant.autobahn.reservation">
	
	<class name="ReservationParams" table="RESERVATION_PARAMS">
		<id name="id" type="long">
			<generator class="native" />
		</id>

		<property name="capacity" type="long" />
		
		<property name="maxDelay" type="int" column="max_delay" />
		
		<property name="resiliency" type="string" />
		
		<property name="bidirectional" type="boolean" />
		
		<property name="startTime" type="calendar" column="start_time" />
		
		<property name="endTime" type="calendar" column="end_time" />
		
		<property name="mtu" type="int" />
		
		<many-to-one name="pathConstraintsIngress" class="net.geant.autobahn.constraints.PathConstraints" 
			not-null="true" cascade="save-update" lazy="false" column="ingress_constraints" />
			
		<many-to-one name="pathConstraintsEgress" class="net.geant.autobahn.constraints.PathConstraints" 
			not-null="true" cascade="save-update" lazy="false" column="egress_constraints" />
	</class>
	
</hibernate-mapping>
