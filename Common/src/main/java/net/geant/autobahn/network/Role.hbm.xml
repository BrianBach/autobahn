<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"hibernate-mapping-3.0.dtd">

<hibernate-mapping package="net.geant.autobahn.network">
	
	<class name="Role" table="hasRole" lazy="false">
		<composite-id>
			<key-many-to-one name="node" column="nodeID" class="Node" />
			<key-many-to-one name="link" column="linkID" class="Link" />
		</composite-id>
		
		<property name="demarc" column="isDemarc" type="boolean" />
	</class>
	
</hibernate-mapping>